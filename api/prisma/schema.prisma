generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           String         @unique @default(uuid())
  username     String
  email        String         @unique
  password     String
  create_at    DateTime       @default(now())
  update_at    DateTime       @updatedAt()
  Phone        Phone[]
  Fingerprint  Fingerprint[]
  IdentityCard IdentityCard[]

  @@map("users")
}

model Phone {
  id     String @unique @default(uuid())
  phone1 Int
  phone2 Int

  user   User   @relation(fields: [userId], references: [id])
  userId String

  create_at DateTime @default(now())
  update_at DateTime @updatedAt()

  @@map("phones")
}

model IdentityCard {
  id            String        @unique @default(uuid())
  name          String
  fathername    String
  mathername    String
  residence     String
  naturalfrom   String
  province      String
  datebirth     DateTime
  sexo          Sexo
  height        Float
  maritalstatus MaritalStatus
  issuedon      DateTime
  validuntil    DateTime
  cardnumber    String        @unique
  user          User          @relation(fields: [userId], references: [id])
  userId        String

  create_at DateTime @default(now())
  update_at DateTime @updatedAt()

  @@map("identityCards")
}

model Fingerprint {
  id String @unique

  user   User   @relation(fields: [userId], references: [id])
  userId String

  create_at DateTime @default(now())
  update_at DateTime @updatedAt()

  @@map("fingerprints")
}

enum Sexo {
  masculine
  feminino
}

enum MaritalStatus {
  single
  married
  widower
  divorced
  separate
}
